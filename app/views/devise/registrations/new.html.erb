<h2>Rejesracja</h2>
<% resource.build_company %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="box_field_inline">
  <div class="field">
    <%= f.label :imię, class: "label label-invert" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="field" >
    <%= f.label :Nazwisko, class: "label label-invert" %><br />
    <%= f.text_field :lastname, class: "form-control" %>
  </div>
  </div>
  
  <div class="box_field_inline">
  <div class="field" >
    <%= f.label :Telefon, class: "label label-invert" %><br />
    <%= f.text_field :tel, class: "form-control" %>
  </div>
  </div>  
  
  <div class="field">
    <%= f.label :email_czyli_login, class: "label label-invert" %><br />
    <%= f.email_field :email, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :hasło, class: "label label-invert" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> znaków minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :potwierdź_hasło, class: "label label-invert" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>
  

  <h4 style="margin-top: 20px; border-bottom-style: solid; border-bottom-width: thin; border-color: #e7e7e7;">Dane firmy:</h4>
  
  <%= f.fields_for :company do |ff| %>
   <div class="box_field_inline">
    <div class="field">
      <%= ff.label :Nazwa_firmy, class: "label label-invert" %><br />
      <%= ff.text_field :short_name, class: "form-control" %>
    </div>
 
    <div class="field">
      <%= ff.label :Pełna_nazwa_firmy, class: "label label-invert" %><br />
      <%= ff.text_area :name, size: "60x2", class: "form-control" %>
    </div>
   </div>

   <div class="box_field_inline">
    <div class="field">
      <%= ff.label :NIP, class: "label label-invert" %><br />
      <%= ff.text_field :nip, class: "form-control" %>
    </div>
   </div>
   <div class="box_field_inline">
    <div class="field">
      <%= ff.label :Adres, class: "label label-invert" %><br />
      <%= ff.text_area :ardress, size: "370x4", class: "form-control" %>
    </div>
  
    <div class="field">
      <%= ff.label "Ardres_do_odsylki_(opcjonalny)", class: "label label-invert" %><br />
      <%= ff.text_area :ardress_do_odsylki, size: "370x4", class: "form-control" %>
    </div>
   </div>
   
   <div class="box_field_inline">
    <div class="field">
      <%= ff.label "Email_firmy_(opcjonalny)", class: "label label-invert" %><br />
      <%= ff.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  
    <div class="field">
      <%= ff.label :Telefon, class: "label label-invert" %><br />
      <%= ff.text_field :tel, autofocus: true, class: "form-control" %>
    </div>
   </div>
  <% end %>  
  
  <div class="field" style= "padding-top: 10px"><%= recaptcha_tags %></div>
  
  <div class="actions" style= "padding-top: 10px">
    <%= f.submit "Zarejestruj", class: "btn btn-lg btn-danger btn-block" %>
  </div>
<% end %>

