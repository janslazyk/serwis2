<%= provide(:login, "active") %>
<div class="center" style = "width:400px">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html=>{:class => "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Prosze się zalogować:</h2>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Adress Email" %>
  <%= f.label :hasło, class: "sr-only" %>
  <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Hasło" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label><%= f.check_box :remember_me %>Zapamiętaj_hasło</label>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Zaloguj", class: "btn btn-lg btn-danger btn-block" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
