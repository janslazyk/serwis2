
<h1>Aby skończyć rejestrację uzupełnij dane Firmy</h1>

<%= form_for @company do |f| %>
  <div class="field">
    <%= f.label :Nazwa_firmy, class: "label label-invert" %><br />
    <%= f.text_field :short_name, autofocus: true, class: "form-control" %>
  </div>
 
  <div class="field">
    <%= f.label :Pełna_nazwa_firmy, class: "label label-invert" %><br />
    <%= f.text_area :name, size: "60x1", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :Adres, class: "label label-invert" %><br />
    <%= f.text_area :ardress, size: "60x6", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label "Ardres_do_odsylki_(opcjonalny)", class: "label label-invert" %><br />
    <%= f.text_area :ardress_do_odsylki, size: "60x6", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :email, class: "label label-invert" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :Telefon, class: "label label-invert" %><br />
    <%= f.text_field :tel, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions" style= "padding-top: 10px">
    <%= f.submit "Zapisz", class: "btn btn-lg btn-danger btn-block"%>
  </div>
<% end %>


